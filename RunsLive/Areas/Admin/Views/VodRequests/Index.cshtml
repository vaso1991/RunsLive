@model IEnumerable<RunsLive.Models.ViewModels.VodRequestViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Vod Requests</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VideoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StreamerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VideoDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    if (item.Status == "Pending")
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VideoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreamerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoDescription)
            </td>
            <td>
                @Html.ActionLink("Resolve", "Resolve", new { id = item.Id })
            </td>
        </tr>
    }
}

</table>
